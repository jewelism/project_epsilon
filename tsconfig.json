{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": ".", // 이 경로를 기준으로 상대 경로를 설정합니다.
    "paths": {
      "@/*": ["src/renderer/*"] // '@'는 'src/' 폴더를 가리킵니다.
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
